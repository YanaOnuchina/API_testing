          "name": "Board format",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const schema = {\r",
                  "  \"type\": \"object\",\r",
                  "  \"required\": [\"id\", \"name\", \"closed\", \"prefs\"],\r",
                  "  \"properties\": {\r",
                  "    \"id\": { \"type\": \"string\" },\r",
                  "    \"name\": { \"type\": \"string\" },\r",
                  "    \"closed\": { \"type\": \"boolean\" },\r",
                  "    \"prefs\": {\r",
                  "      \"type\": \"object\",\r",
                  "      \"properties\": {\r",
                  "        \"permissionLevel\": { \"type\": \"string\", \"enum\": [\"public\", \"private\", \"org\"] }\r",
                  "      }\r",
                  "    }\r",
                  "  }\r",
                  "};\r",
                  "\r",
                  "pm.test(\"Schema Validation\", () => {\r",
                  "    pm.response.to.have.jsonSchema(schema);\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
