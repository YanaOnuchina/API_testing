              "script": {
                "exec": [
                  "function generateRandomString(length){\r",
                  "    let random_string = \"\";\r",
                  "    for (let i = 0; i < length; i++) {\r",
                  "        random_string += pm.variables.replaceIn(\"{{$randomAlphaNumeric}}\")\r",
                  "    }\r",
                  "    return random_string;\r",
                  "}\r",
                  "\r",
                  "pm.collectionVariables.set(\"rand_string\", generateRandomString(2000));"
